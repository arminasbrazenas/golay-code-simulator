<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Width="800"
        Height="600"
        x:Class="GolayCode.Presentation.MainWindow"
        Title="Golay Code">
    <StackPanel Margin="24">
        <TextBlock Margin="0 4">Message:</TextBlock>
        <TextBox
            x:Name="MessageTextBox"
            Watermark="Enter a binary message whose length is a multiple of 12" />
        <TextBlock x:Name="MessageTextBoxError" Foreground="Red" Margin="0 4 0 0" IsVisible="False" />
        <Button Margin="0 8 0 16" Click="OnSendMessageClicked">Send message</Button>
        
        <TextBlock Margin="0 4">Encoded message:</TextBlock>
        <TextBox x:Name="EncodedMessageTextBox" />

        <TextBlock Margin="0 8 0 4">Message from channel:</TextBlock>
        <TextBox x:Name="MessageFromChannelTextBox" />

        <Button Margin="0 8 0 16" Click="OnDecodeMessageClicked">Decode message</Button>
    </StackPanel>
</Window>
